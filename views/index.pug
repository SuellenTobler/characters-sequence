extends layout

block content

	.row
		.col-md-6.col-md-offset-3
			h4 Characters Sequence

	.row
		.col-md-6.col-md-offset-3
			form(action='/sequence', method='post')
				.form-group
					.row
						.col-xs-8
							input.form-control(type='text', name='sequenceStr', placeholder='Digite uma palavra:')
						.col-xs-4
							input.btn.btn-default(type='submit', value='enviar')
				span= sequenceRs
